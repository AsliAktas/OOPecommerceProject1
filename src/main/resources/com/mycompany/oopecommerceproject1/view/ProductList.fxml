<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.oopecommerceproject1.controller.ProductListController"
      spacing="10" alignment="CENTER" prefWidth="600" prefHeight="450">
    <TableView fx:id="productTable" prefHeight="350" prefWidth="580">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Ürün Adı" prefWidth="160"/>
            <TableColumn fx:id="priceColumn" text="Fiyat (₺)" prefWidth="90"/>
            <TableColumn fx:id="stockColumn" text="Stok" prefWidth="60"/>
            <!-- Mevcut “Sepete Ekle” sütunu -->
            <TableColumn fx:id="addColumn" text="Sepete Ekle" prefWidth="100"/>
            <!-- Yeni eklenen sütun: “Sepetten Kaldır” -->
            <TableColumn fx:id="removeColumn" text="Sepetten Kaldır" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Altta bir satırda = “Geri Dön” + “Sepetimi Gör” butonları -->
    <HBox spacing="10">
        <Button text="Geri Dön"
                fx:id="backButton"
                onAction="#handleBackAction"/>
        <Button text="Sepetimi Gör"
                fx:id="viewCartButton"
                onAction="#handleViewCartAction"/>
    </HBox>
</VBox>
