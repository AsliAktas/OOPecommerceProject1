<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.oopecommerceproject1.controller.MainMenuController"
      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="350">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="welcomeLabel" text="Hoş geldiniz!" style="-fx-font-size: 24px;"/>

    <Button text="Ürün Listesi" fx:id="productListButton" onAction="#handleProductListAction"/>

    <Button text="Profil" fx:id="profileButton" onAction="#handleProfileAction"/>
<Button text="Sipariş Oluştur" fx:id="createOrderButton" onAction="#handleCreateOrderAction"/>

    <!-- Yeni: Kartlarım Butonu -->
    <Button text="Kartlarım" fx:id="myCardsButton" onAction="#handleMyCardsAction"/>

    <Button text="Çıkış Yap" onAction="#handleLogoutAction"/>
</VBox>
